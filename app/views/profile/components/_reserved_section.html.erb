<% if @reserved.count > 0 %>
  <ul>
    <% @reserved.each do |book| %>
      <% book = book.book %>
      <li class="hide-actions" id="item-<%= book.id %>">
        <span class="actions">
          <%= link_to "add",
            profile_add_path(:book_id => book.id),
            method: :patch,
            class: "btn btn-outline-primary btn-sm py-0",
            remote: true %>
          <%= link_to "remove",
            profile_unreserve_path(:book_id => book.id),
            method: :delete,
            class: "btn btn-outline-danger btn-sm py-0",
            remote: true %>
        </span>
        <span class="ms-1">
          <%= book.title %><small> by <%= book.author %></small>
        </span>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You don't have any books reserved yet</p>
<% end %>
