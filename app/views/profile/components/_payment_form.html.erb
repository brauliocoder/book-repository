<button id="form-activator-btn" type="button" class="btn btn-outline-dark px-5">
  Buy Now <span id="order-counter" class="badge bg-warning fs-6"><%= @pending.count %></span>
</button>
<form class="mt-3">
  <b>
    <small>*This is not a real form, nothing is being recorded or sended</small>
  </b>
  <fieldset id="payment-fields" disabled>
    <div class="">
      <label for="cc-number" class="m-0 form-label">Credit Card</label>
      <input type="text" class="form-control" id="cc-number" value="1234 4321 4567 7654">
    </div>
    <div class="d-flex flex-col gap-2">
      <div class="col">
        <label for="cc-exp-day" class="m-0 form-label">Expiration Date</label>
        <input type="month" class="form-control" id="cc-exp-day" value="2025-01">
      </div>
      <div class="col">
        <label for="cc-ccv" class="m-0 form-label">Code CVV</label>
        <input type="password" class="form-control" id="cc-ccv" value="123">
      </div>
    </div>
    <div>
      <label for="cc-name" class="m-0 form-label">Name</label>
      <input type="text" class="form-control" id="cc-name" value="John Biggins">
    </div>
  </fieldset>
</form>